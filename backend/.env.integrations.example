# Configurações para Integrações Multi-tenant
# Copie este arquivo para .env e configure com suas credenciais reais

# === GOOGLE OAUTH CREDENTIALS ===
# Obtenha em: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:5174/oauth/callback/google-calendar

# === GOOGLE SHEETS API ===
GOOGLE_SHEETS_CLIENT_ID=your-sheets-client-id.apps.googleusercontent.com
GOOGLE_SHEETS_CLIENT_SECRET=your-sheets-client-secret
GOOGLE_SHEETS_REDIRECT_URI=http://localhost:5174/oauth/callback/google-sheets

# === MICROSOFT OAUTH CREDENTIALS ===
# Obtenha em: https://portal.azure.com/#blade/Microsoft_AAD_RegisteredApps
MICROSOFT_CLIENT_ID=your-microsoft-client-id
MICROSOFT_CLIENT_SECRET=your-microsoft-client-secret
MICROSOFT_TENANT_ID=your-tenant-id
MICROSOFT_REDIRECT_URI=http://localhost:5174/oauth/callback/microsoft

# === SUPABASE CONFIGURATION ===
# Obtenha em: https://app.supabase.com/project/your-project/settings/api
SUPABASE_URL=https://your-project-id.supabase.co
SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key

# === ENCRYPTION SETTINGS ===
# Chave para criptografar tokens (gere uma chave segura de 32 caracteres)
ENCRYPTION_KEY=your-32-character-encryption-key-here

# === WEBHOOK SETTINGS ===
# URLs para receber webhooks das integrações
WEBHOOK_SECRET=your-webhook-secret-key
WEBHOOK_BASE_URL=http://localhost:4000

# === RATE LIMITING ===
# Configurações para controle de taxa de requisições
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_BURST_SIZE=10

# === LOGGING ===
# Nível de log para integrações
INTEGRATION_LOG_LEVEL=info
LOG_INTEGRATION_REQUESTS=true

# === CACHE SETTINGS ===
# Configurações de cache para tokens e dados
CACHE_TTL_TOKENS=3600
CACHE_TTL_DATA=300

# === DEVELOPMENT SETTINGS ===
# Configurações específicas para desenvolvimento
DEV_MODE=true
DEV_SKIP_SSL_VERIFY=false
DEV_MOCK_EXTERNAL_APIS=false